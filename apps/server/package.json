{
  "name": "@app/server",
  "displayName": "WEPIECES",
  "version": "1.0.0",
  "module": "index.ts",
  "types": "index.ts",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun --env-file=../../.env index.ts",
    "dev": "bun --env-file=../../.env --watch index.ts",
    "db:generate": "drizzle-kit generate --dialect=postgresql --schema=src/database/schema.ts --out=./drizzle",
    "db:migrate": "bun --env-file=../../.env ./src/database/migrate.ts",
    "db:drop": "bunx drizzle-kit drop"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.25.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.2",
    "@hono/zod-validator": "^0.2.2",
    "@t3-oss/env-nextjs": "^0.11.1",
    "drizzle-orm": "^0.34.1",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.5",
    "jose": "^5.9.6",
    "nanoid": "^5.0.7",
    "postgres": "^3.4.4",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  }
}
