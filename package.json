{
  "name": "@app",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "up": "docker-compose up -d",
    "build": "docker-compose up -d --build --force-recreate",
    "docker:dev": "docker-compose -f docker-compose.local.yaml up -d",
    "dev": "bun run --filter '*' dev",
    "migrate": "cd apps/server && bun run db:generate && bun run db:migrate",
    "clean": "rm -f bun.lockb && bun install"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
